<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smflanagan.appproject.AddBundle">


    <LinearLayout
        android:layout_width="585dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/SaveBundle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4169E1"
            android:onClick="toSaveBundle"
            android:text="@string/save_bundle"
            android:textColor="#FFFAFA" />

        <Button
            android:id="@+id/AddExisitingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#4169E1"
            android:onClick="toMyItemsFromAddBundle"
            android:text="@string/add_existing_item"
            android:textColor="#FFFAFA" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
